generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model BusinessCustomer {
  id          String   @id @default(uuid())
  name        String   // Unternehmensname
  email       String   @unique
  phone       String?
  website     String?
  address     String?
  city        String?
  postalCode  String?
  country     String?
  taxNumber   String?  // Umsatzsteuer-ID
  createdAt   DateTime @default(now())
}
